<Page x:Class="WpfApp1.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Margin="20">
        <Label Content="Nickname" />
        <TextBox x:Name="TxtNickname" Margin="0,5" />
        <Label Content="Email" />
        <TextBox x:Name="TxtEmail" Margin="0,5" />
        <Label Content="Password" />
        <TextBox x:Name="TxtPassword" Margin="0,5" />
        <Label Content="Name" />
        <TextBox x:Name="TxtName" Margin="0,5" />
        <Label Content="Surname" />
        <TextBox x:Name="TxtSurname" Margin="0,5" />
        <Label Content="Description" />
        <TextBox x:Name="TxtDescription" Margin="0,5" />
        <Label Content="Educational Institution" />
        <TextBox x:Name="TxtInstitution" Margin="0,5" />
        <Button Content="Register" Click="BtnRegister_Click" Margin="0,10"/>
        <Button Content="Go to Login" Click="BtnToLogin_Click"/>
    </StackPanel>
</Page>
